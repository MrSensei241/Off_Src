<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="G2PatchMaker.SendMail"
	x:Name="Window"
	Title="SendMail"
	Width="500.5" Height="429" Foreground="White" Background="#FF3A3A3A">

	<Grid x:Name="LayoutRoot">
		<TextBlock HorizontalAlignment="Left" Margin="10,9,0,0" VerticalAlignment="Top" Width="36" Height="19" Text="제목 : " TextWrapping="Wrap"/>
		<TextBox x:Name="mail_body" Margin="10,35,8,40" TextWrapping="Wrap"/>
		<TextBox x:Name="mail_header" Margin="50,8,8,0" VerticalAlignment="Top" Height="20" TextWrapping="Wrap"/>
		<Button x:Name="send" Click="send_Click"  Margin="0,0,95.5,8" VerticalAlignment="Bottom" Height="26" Content="보내기" HorizontalAlignment="Right" Width="83.5"/>
		<Button x:Name="cancel" Click="cancel_Click"  HorizontalAlignment="Right" Margin="0,0,8,8" VerticalAlignment="Bottom" Width="83.5" Height="26" Content="취소"/>
	</Grid>
</Window>